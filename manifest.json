  "oauth2": {
    "client_id": "44642640963-udpngeo44pe6b4i0m392lslbc0s88bhr.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/youtube"
    ]
  },
  "background": {
    "service_worker": "src/background/index.ts"
  }
}
