  "manifest_version": 3,
  "name": "YouTube Subscriptions Viewer",
  "version": "1.0.0",
  "description": "View your YouTube subscriptions in a clean, simple interface",
  "action": {
    "default_popup": "index.html",
    "default_title": "YouTube Subscriptions"
  },
  "permissions": [
    "identity",
    "storage"
